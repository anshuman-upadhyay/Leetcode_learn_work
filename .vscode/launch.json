{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "WSL Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                     {
             "text": "-enable-pretty-printing",
             "description": "Enable GDB pretty printing",
             "ignoreFailures": true
            }          
        ],
            "preLaunchTask": "C/C++: g++ build active file"
        }
    ]
}
